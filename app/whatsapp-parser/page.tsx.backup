'use client'

import { useState } from 'react'
import { useRouter } from 'next/navigation'
import Navigation from '../components/Navigation'

interface ExtractedData {
  client_name: string
  client_email: string
  client_phone: string
  trip_name: string
  tour_requested: string
  start_date: string
  duration_days: number
  num_adults: number
  num_children: number
  language: string
  interests: string[]
  special_requests: string[]
  budget_level: string
  hotel_name: string
  hotel_location: string
  conversation_language: string
  confidence_score: number
}

export default function WhatsAppParserPage() {
  const router = useRouter()
  const [conversation, setConversation] = useState('')
  const [loading, setLoading] = useState(false)
  const [analyzing, setAnalyzing] = useState(false)
  const [extractedData, setExtractedData] = useState<ExtractedData | null>(null)
  const [error, setError] = useState<string | null>(null)
  const [generatingItinerary, setGeneratingItinerary] = useState(false)

  const sampleConversation = `Buenas tardes, somos un grupo de 4 personas interesadas en esta excursi√≥n. Desear√≠amos saber, si podemos a√±adir opcionalmente la visita a Dashur en este tour.
Gracias por su mensaje. ¬øPodr√≠a, por favor, indicarnos el nombre o el enlace del tour?
https://travel2egypt.org/es/excursion-privada-menfis-y-saqqara/
S√≠, podemos a√±adir Dashur a ese tour. ¬øPodr√≠a indicarme la fecha, por favor?
Ser√≠a para el d√≠a 12/11/2025
Tour: Memphis, Saqqara y Dahshur ‚Äì Excursi√≥n de un d√≠a
Precio: 65 ‚Ç¨ por persona (basado en 4 personas)
Soy Inmaculada Yurba. Mi correo es: inmayurba@yahoo.es 
Ser√≠amos 4 adultos.`

  const loadSample = () => {
    setConversation(sampleConversation)
  }

  const analyzeConversation = async () => {
    if (!conversation.trim()) {
      setError('Please paste a WhatsApp conversation first')
      return
    }

    setAnalyzing(true)
    setError(null)

    try {
      const response = await fetch('/api/ai/parse-whatsapp', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ conversation })
      })

      const data = await response.json()

      if (data.success) {
        setExtractedData(data.data)
      } else {
        setError(data.error || 'Failed to analyze conversation')
      }
    } catch (err) {
      setError('Error analyzing conversation')
      console.error(err)
    } finally {
      setAnalyzing(false)
    }
  }

  const generateItinerary = async () => {
    if (!extractedData) return

    setGeneratingItinerary(true)
    setError(null)

    try {
      const response = await fetch('/api/ai/generate-itinerary', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(extractedData)
      })

      const data = await response.json()

      if (data.success) {
        router.push(`/itineraries/${data.data.itinerary_id}`)
      } else {
        setError(data.error || 'Failed to generate itinerary')
      }
    } catch (err) {
      setError('Error generating itinerary')
      console.error(err)
    } finally {
      setGeneratingItinerary(false)
    }
  }

  const editField = (field: keyof ExtractedData, value: any) => {
    if (extractedData) {
      setExtractedData({
        ...extractedData,
        [field]: value
      })
    }
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 to-white">
      <Navigation />

      <div className="container mx-auto px-4 py-8">
        <div className="mb-8">
          <h1 className="text-4xl font-bold text-gray-900 mb-2">ü§ñ AI WhatsApp Parser</h1>
          <p className="text-gray-600">Paste conversation ‚Üí AI creates itinerary automatically</p>
        </div>

        <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
          
          <div>
            <div className="bg-white rounded-xl shadow-lg p-6">
              <div className="flex items-center justify-between mb-4">
                <h2 className="text-2xl font-bold text-gray-900">
                  üí¨ WhatsApp Conversation
                </h2>
                <button
                  onClick={loadSample}
                  className="text-sm text-blue-600 hover:text-blue-700 font-medium"
                >
                  Load Sample
                </button>
              </div>

              <p className="text-sm text-gray-600 mb-4">
                Copy and paste your entire WhatsApp conversation below. Our AI will extract all the important details.
              </p>

              <textarea
                value={conversation}
                onChange={(e) => setConversation(e.target.value)}
                placeholder="Paste your WhatsApp conversation here...&#10;&#10;Example:&#10;Client: Hi, we want to visit Egypt&#10;Agent: Great! When are you thinking?&#10;Client: Maybe next month, around 10 days&#10;..."
                rows={20}
                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent font-mono text-sm"
              />

              <div className="mt-4 flex items-center justify-between">
                <p className="text-sm text-gray-500">
                  {conversation.length} characters ‚Ä¢ Multi-language supported üåç
                </p>
                <button
                  onClick={analyzeConversation}
                  disabled={analyzing || !conversation.trim()}
                  className={`px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-semibold flex items-center gap-2 ${
                    (analyzing || !conversation.trim()) ? 'opacity-50 cursor-not-allowed' : ''
                  }`}
                >
                  {analyzing ? (
                    <>
                      <div className="w-5 h-5 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                      Analyzing...
                    </>
                  ) : (
                    <>
                      <span>üîç</span>
                      Analyze with AI
                    </>
                  )}
                </button>
              </div>
            </div>

            <div className="mt-6 bg-blue-50 rounded-xl p-6">
              <h3 className="font-bold text-gray-900 mb-3">üìù How it works:</h3>
              <ol className="space-y-2 text-sm text-gray-700">
                <li>1. Copy your WhatsApp conversation (client + agent messages)</li>
                <li>2. Paste it in the box above</li>
                <li>3. Click "Analyze with AI"</li>
                <li>4. AI extracts: client info, dates, requirements, preferences</li>
                <li>5. Review extracted data (edit if needed)</li>
                <li>6. Click "Generate Itinerary" - AI creates the full trip!</li>
                <li>7. Done! View and send quote to client üéâ</li>
              </ol>
            </div>
          </div>

          <div>
            {error && (
              <div className="mb-6 p-4 bg-red-50 border-l-4 border-red-500 rounded">
                <p className="text-red-700">{error}</p>
              </div>
            )}

            {!extractedData && !analyzing && (
              <div className="bg-white rounded-xl shadow-lg p-12 text-center">
                <div className="text-6xl mb-4">ü§ñ</div>
                <h3 className="text-xl font-bold text-gray-900 mb-2">
                  Waiting for Conversation...
                </h3>
                <p className="text-gray-600">
                  Paste a WhatsApp conversation and click "Analyze with AI" to see the magic!
                </p>
              </div>
            )}

            {extractedData && (
              <div className="bg-white rounded-xl shadow-lg p-6">
                <div className="flex items-center justify-between mb-6">
                  <h2 className="text-2xl font-bold text-gray-900">
                    ‚úÖ Extracted Information
                  </h2>
                  <div className="flex items-center gap-2">
                    <span className="text-sm text-gray-600">Confidence:</span>
                    <span className={`px-3 py-1 rounded-full text-sm font-medium ${
                      extractedData.confidence_score >= 0.8 ? 'bg-green-100 text-green-800' :
                      extractedData.confidence_score >= 0.6 ? 'bg-yellow-100 text-yellow-800' :
                      'bg-red-100 text-red-800'
                    }`}>
                      {Math.round(extractedData.confidence_score * 100)}%
                    </span>
                  </div>
                </div>

                <div className="space-y-6">
                  <div>
                    <h3 className="text-lg font-semibold text-gray-900 mb-3">üë§ Client Information</h3>
                    <div className="space-y-3">
                      <div>
                        <label className="block text-sm font-medium text-gray-700 mb-1">Name</label>
                        <input
                          type="text"
                          value={extractedData.client_name}
                          onChange={(e) => editField('client_name', e.target.value)}
                          className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600"
                        />
                      </div>
                      <div>
                        <label className="block text-sm font-medium text-gray-700 mb-1">Email</label>
                        <input
                          type="email"
                          value={extractedData.client_email}
                          onChange={(e) => editField('client_email', e.target.value)}
                          className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600"
                        />
                      </div>
                      {extractedData.client_phone && (
                        <div>
                          <label className="block text-sm font-medium text-gray-700 mb-1">Phone</label>
                          <input
                            type="tel"
                            value={extractedData.client_phone}
                            onChange={(e) => editField('client_phone', e.target.value)}
                            className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600"
                          />
                        </div>
                      )}
                    </div>
                  </div>

                  <div>
                    <h3 className="text-lg font-semibold text-gray-900 mb-3">‚úàÔ∏è Trip Details</h3>
                    <div className="space-y-3">
                      <div>
                        <label className="block text-sm font-medium text-gray-700 mb-1">Tour Requested</label>
                        <input
                          type="text"
                          value={extractedData.tour_requested}
                          onChange={(e) => editField('tour_requested', e.target.value)}
                          className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600"
                        />
                      </div>
                      <div className="grid grid-cols-2 gap-3">
                        <div>
                          <label className="block text-sm font-medium text-gray-700 mb-1">Date</label>
                          <input
                            type="date"
                            value={extractedData.start_date}
                            onChange={(e) => editField('start_date', e.target.value)}
                            className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600"
                          />
                        </div>
                        <div>
                          <label className="block text-sm font-medium text-gray-700 mb-1">Duration</label>
                          <input
                            type="number"
                            value={extractedData.duration_days}
                            onChange={(e) => editField('duration_days', parseInt(e.target.value))}
                            className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600"
                          />
                        </div>
                      </div>
                      <div className="grid grid-cols-2 gap-3">
                        <div>
                          <label className="block text-sm font-medium text-gray-700 mb-1">Adults</label>
                          <input
                            type="number"
                            value={extractedData.num_adults}
                            onChange={(e) => editField('num_adults', parseInt(e.target.value))}
                            className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600"
                          />
                        </div>
                        <div>
                          <label className="block text-sm font-medium text-gray-700 mb-1">Children</label>
                          <input
                            type="number"
                            value={extractedData.num_children}
                            onChange={(e) => editField('num_children', parseInt(e.target.value))}
                            className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600"
                          />
                        </div>
                      </div>
                      <div>
                        <label className="block text-sm font-medium text-gray-700 mb-1">Language</label>
                        <select
                          value={extractedData.language}
                          onChange={(e) => editField('language', e.target.value)}
                          className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600"
                        >
                          <option value="Spanish">Spanish</option>
                          <option value="English">English</option>
                          <option value="French">French</option>
                          <option value="Italian">Italian</option>
                          <option value="German">German</option>
                        </select>
                      </div>
                    </div>
                  </div>

                  {extractedData.interests.length > 0 && (
                    <div>
                      <h3 className="text-lg font-semibold text-gray-900 mb-3">üéØ Interests</h3>
                      <div className="flex flex-wrap gap-2">
                        {extractedData.interests.map((interest, idx) => (
                          <span key={idx} className="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
                            {interest}
                          </span>
                        ))}
                      </div>
                    </div>
                  )}

                  {extractedData.hotel_name && (
                    <div>
                      <h3 className="text-lg font-semibold text-gray-900 mb-3">üè® Hotel Information</h3>
                      <div className="space-y-3">
                        <div>
                          <label className="block text-sm font-medium text-gray-700 mb-1">Hotel Name</label>
                          <input
                            type="text"
                            value={extractedData.hotel_name}
                            onChange={(e) => editField('hotel_name', e.target.value)}
                            className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600"
                          />
                        </div>
                        {extractedData.hotel_location && (
                          <div>
                            <label className="block text-sm font-medium text-gray-700 mb-1">Location</label>
                            <input
                              type="text"
                              value={extractedData.hotel_location}
                              onChange={(e) => editField('hotel_location', e.target.value)}
                              className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600"
                            />
                          </div>
                        )}
                      </div>
                    </div>
                  )}

                  {extractedData.special_requests.length > 0 && (
                    <div>
                      <h3 className="text-lg font-semibold text-gray-900 mb-3">üìù Special Requests</h3>
                      <ul className="list-disc list-inside space-y-1 text-sm text-gray-700">
                        {extractedData.special_requests.map((request, idx) => (
                          <li key={idx}>{request}</li>
                        ))}
                      </ul>
                    </div>
                  )}

                  <div className="pt-6 border-t border-gray-200">
                    <button
                      onClick={generateItinerary}
                      disabled={generatingItinerary}
                      className={`w-full px-6 py-4 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-bold text-lg flex items-center justify-center gap-3 ${
                        generatingItinerary ? 'opacity-50 cursor-not-allowed' : ''
                      }`}
                    >
                      {generatingItinerary ? (
                        <>
                          <div className="w-6 h-6 border-3 border-white border-t-transparent rounded-full animate-spin"></div>
                          Generating Itinerary...
                        </>
                      ) : (
                        <>
                          <span className="text-2xl">üöÄ</span>
                          Generate Complete Itinerary with AI
                        </>
                      )}
                    </button>
                    <p className="text-center text-sm text-gray-500 mt-3">
                      AI will select services from your rates database and create a complete day-by-day itinerary
                    </p>
                  </div>
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  )
}
